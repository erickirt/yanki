{
	"name": "yanki",
	"version": "0.2.2",
	"type": "module",
	"description": "An ultra-simple CLI tool and TypeScript library for syncing Markdown to Anki flashcards.",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/kitschpatrol/yanki.git"
	},
	"homepage": "https://github.com/kitschpatrol/yanki",
	"bugs": {
		"url": "https://github.com/kitschpatrol/yanki/issues",
		"email": "eric@ericmika.com"
	},
	"author": {
		"name": "Eric Mika",
		"email": "eric@ericmika.com",
		"url": "https://ericmika.com"
	},
	"license": "MIT",
	"packageManager": "pnpm@9.2.0",
	"engines": {
		"node": ">=18.0.0",
		"pnpm": ">=8.0.0"
	},
	"bin": {
		"yanki": "dist/bin/cli.js"
	},
	"main": "./dist/lib/index.js",
	"module": "./dist/lib/index.js",
	"exports": {
		".": {
			"import": "./dist/lib/index.js",
			"types": "./dist/lib/index.d.ts"
		}
	},
	"types": "./dist/lib/index.d.ts",
	"files": [
		"dist/*"
	],
	"keywords": [
		"anki",
		"flashcards",
		"spaced-repetition",
		"anki-connect",
		"markdown",
		"cli",
		"sync",
		"npm-package"
	],
	"scripts": {
		"build": "pkgroll --clean-dist --minify",
		"clean": "git clean -fdX && rm ./pnpm-lock.yaml",
		"fix": "shared-config --fix",
		"lint": "shared-config --lint",
		"release": "pnpm bumpp --commit 'Release: %s' && pnpm build && pnpm publish --otp $(op read 'op://Personal/Npmjs/one-time password?attribute=otp')",
		"test": "vitest",
		"test-browser": "vite"
	},
	"dependencies": {
		"@types/lodash-es": "^4.17.12",
		"@types/mdast": "^4.0.4",
		"@types/node": "^20.14.2",
		"@types/unist": "^3.0.2",
		"@types/yargs": "^17.0.32",
		"chalk": "^5.3.0",
		"globby": "^14.0.1",
		"rehype-mathjax": "^6.0.0",
		"yargs": "^17.7.2"
	},
	"devDependencies": {
		"@kitschpatrol/shared-config": "^4.6.7",
		"@shikijs/rehype": "^1.6.2",
		"@types/hast": "^3.0.4",
		"bumpp": "^9.4.1",
		"deepmerge-ts": "^7.0.3",
		"path-browserify-esm": "^1.0.4",
		"pkgroll": "^2.1.1",
		"plur": "^5.1.0",
		"pretty-ms": "^9.0.0",
		"rehype-remove-comments": "^6.0.0",
		"rehype-stringify": "^10.0.0",
		"remark": "^15.0.1",
		"remark-flexible-markers": "^1.2.1",
		"remark-frontmatter": "^5.0.0",
		"remark-gfm": "^4.0.0",
		"remark-github-beta-blockquote-admonitions": "^3.1.1",
		"remark-math": "^6.0.0",
		"remark-parse": "^11.0.0",
		"remark-rehype": "^11.1.0",
		"remark-remove-comments": "^1.0.1",
		"remark-wiki-link": "^2.0.1",
		"sort-keys": "^5.0.0",
		"string-strip-html": "^13.4.8",
		"tsx": "^4.13.0",
		"type-fest": "^4.19.0",
		"typescript": "^5.4.5",
		"unified": "^11.0.4",
		"unist-builder": "^4.0.0",
		"unist-util-visit": "^5.0.0",
		"untildify": "^5.0.0",
		"vite": "^5.2.12",
		"vitest": "^1.6.0",
		"yaml": "^2.4.3",
		"yanki-connect": "^1.0.3"
	},
	"publishConfig": {
		"access": "public"
	}
}
