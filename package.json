{
	"name": "yanki-md",
	"version": "0.0.0",
	"type": "module",
	"description": "An ultra-simple CLI tool and TypeScript library for syncing Markdown to Anki flashcards. No customization. No configuration. No fuss.",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/kitschpatrol/yanki-md.git"
	},
	"homepage": "https://github.com/kitschpatrol/yanki-md",
	"bugs": {
		"url": "https://github.com/kitschpatrol/yanki-md/issues",
		"email": "eric@ericmika.com"
	},
	"author": {
		"name": "Eric Mika",
		"email": "eric@ericmika.com",
		"url": "https://ericmika.com"
	},
	"license": "MIT",
	"packageManager": "pnpm@9.1.4",
	"engines": {
		"node": ">=18.0.0",
		"pnpm": ">=8.0.0"
	},
	"bin": {
		"yanki-md": "dist/cli/cli.js",
		"yanki": "dist/cli/cli.js"
	},
	"main": "./dist/lib/index.js",
	"module": "./dist/lib/index.js",
	"exports": {
		".": {
			"import": "./dist/lib/index.js",
			"types": "./dist/lib/index.d.ts"
		}
	},
	"types": "./dist/lib/index.d.ts",
	"files": [
		"dist/*"
	],
	"keywords": [
		"anki",
		"flashcards",
		"spaced-repetition",
		"anki-connect",
		"markdown",
		"cli",
		"sync",
		"npm-package"
	],
	"scripts": {
		"build": "pnpm run build:lib && pnpm run build:cli",
		"build:cli": "tsx ./scripts/build-cli.ts",
		"build:lib": "rm -rf ./dist && tsx ./scripts/build-lib.ts && tsc -p tsconfig.lib.json",
		"build:lib:vite": "vite build",
		"clean": "git clean -fdX && rm ./pnpm-lock.yaml",
		"fix": "shared-config --fix",
		"lint": "shared-config --lint",
		"release": "pnpm build && pnpm bumpp --commit 'Release: %s' && pnpm publish --otp $(op read 'op://Personal/Npmjs/one-time password?attribute=otp')",
		"test": "vitest"
	},
	"dependencies": {
		"@types/lodash-es": "^4.17.12",
		"@types/mdast": "^4.0.4",
		"@types/node": "^20.13.0",
		"@types/unist": "^3.0.2",
		"@types/yargs": "^17.0.32",
		"chalk": "^5.3.0",
		"globby": "^14.0.1",
		"rehype-mathjax": "^6.0.0",
		"yargs": "^17.7.2"
	},
	"devDependencies": {
		"@kitschpatrol/shared-config": "^4.6.6",
		"@rollup/plugin-commonjs": "^25.0.8",
		"@rollup/plugin-node-resolve": "^15.2.3",
		"@rollup/plugin-typescript": "^11.1.6",
		"@shikijs/rehype": "^1.6.2",
		"bumpp": "^9.4.1",
		"deepmerge-ts": "^7.0.1",
		"esbuild": "^0.21.4",
		"esbuild-plugin-polyfill-node": "^0.3.0",
		"esbuild-plugins-node-modules-polyfill": "^1.6.4",
		"path-browserify-esm": "^1.0.4",
		"pkgroll": "^2.1.1",
		"plur": "^5.1.0",
		"pretty-ms": "^9.0.0",
		"rehype-remove-comments": "^6.0.0",
		"rehype-stringify": "^10.0.0",
		"remark": "^15.0.1",
		"remark-flexible-markers": "^1.2.1",
		"remark-frontmatter": "^5.0.0",
		"remark-gfm": "^4.0.0",
		"remark-github-beta-blockquote-admonitions": "^3.1.1",
		"remark-math": "^6.0.0",
		"remark-parse": "^11.0.0",
		"remark-rehype": "^11.1.0",
		"remark-remove-comments": "^1.0.1",
		"remark-wiki-link": "^2.0.1",
		"rollup": "^4.18.0",
		"rollup-plugin-dts": "^6.1.1",
		"sort-keys": "^5.0.0",
		"string-strip-html": "^13.4.8",
		"tsx": "^4.11.0",
		"type-fest": "^4.18.3",
		"typescript": "^5.4.5",
		"unified": "^11.0.4",
		"unist-builder": "^4.0.0",
		"unist-util-visit": "^5.0.0",
		"untildify": "^5.0.0",
		"vite": "^5.2.12",
		"vite-plugin-dts": "^3.9.1",
		"vite-plugin-node-polyfills": "0.17.0",
		"vitest": "^1.6.0",
		"yaml": "^2.4.3",
		"yanki-connect": "link:../yanki-connect"
	},
	"publishConfig": {
		"access": "public"
	}
}
